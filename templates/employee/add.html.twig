{% extends 'base.html.twig' %}

{% set title = edit ? 'Edit an employee' : 'Add a new employee' %}

{% block title %} {{title}} {% endblock %}

{% block body %}
    <h1> {{title}} </h1>
    <div class="p-5">
        {{ form_start(addEmployeeForm) }}
            <div class="row">
                <div class="col-sm">
                    {{ form_row(addEmployeeForm.firstname) }}
                </div>
                <div class="col-sm">
                    {{ form_row(addEmployeeForm.lastname) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm">
                    {{ form_row(addEmployeeForm.birthdate) }}
                </div>
                <div class="col-sm">
                    {{ form_row(addEmployeeForm.hireDate) }}
                </div>
            </div>
            {{ form_row(addEmployeeForm.city) }}
            {{ form_row(addEmployeeForm.company) }}
            <div class="mt-4">
                {{ form_row(addEmployeeForm.confirm) }}
            </div>
        {{ form_end(addEmployeeForm) }}
    </div>
{% endblock %}
